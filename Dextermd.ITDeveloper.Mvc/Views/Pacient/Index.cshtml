@using Dextermd.ITDeveloper.Mvc.Extensions.ExtensionsMethods
@model IEnumerable<Dextermd.ITDeveloper.Domain.Models.Pacient>

@{
    ViewData["Title"] = "Pacient List";
}


<vc:header-modules 
    title="Medical Management-Sys / Pacients Module"
    subtitle="Administration Pacient Module"></vc:header-modules>

<partial name="PartialView/_pacient_status" />


<div class="panel panel-default panel-controls">
    <div class="panel panel-heading">
        <h3>Pacient List</h3>
    </div>

    <div class="panel-body">

        <p>
            <a asp-controller="Pacient" asp-action="Create" class="btn btn-info"><span class="fa fa-plus-circle"></span>&nbsp;&nbsp; Add Pacient </a>
        </p>

        @*<table-grid Items="@Model"></table-grid>*@

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Birth Date
                        @*@Html.DisplayNameFor(model => model.BirthDate)*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HospitalizationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.TypePacient)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sex)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PacientStatus.Description)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var birthDateToMdl = item.BirthDate.ToMoldavianDate();
                    var hospitalDate = item.HospitalizationDate.ToMoldavianDateTime();
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @birthDateToMdl
                        </td>
                        <td>
                            @hospitalDate
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.TypePacient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sex)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PacientStatus.Description)
                        </td>

                        <td>
                            <a title="Edit Pacient" asp-controller="Pacient" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-square-o fa-2x"></span> </a>
                            <a title="Details Pacient"  asp-controller="Pacient" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search fa-2x"></span> </a>
                            <a title="Delete Pacient" asp-controller="Pacient" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash fa-2x"></span> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

