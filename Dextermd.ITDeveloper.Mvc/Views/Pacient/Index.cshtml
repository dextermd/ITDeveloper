@model IEnumerable<Dextermd.ITDeveloper.Domain.Models.Pacient>

@{
    ViewData["Title"] = "Pacients List";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Pacients List</h3>
    </div>


    <div class="panel panel-body">
        <p>
            <a asp-controller="Pacient" asp-action="Create" class="btn btn-info"><span class="fa fa-plus-circle"</span>&nbsp;&nbsp; Add Pacient </a>
        </p>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Birth Date
                        @*@Html.DisplayNameFor(model => model.BirthDate)*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HospitalizationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.TypePacient)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sex)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PacientStatus.Description)
                    </th>

                    @*<th>
                        @Html.DisplayNameFor(model => model.Rg)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RgOrgan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RgIssueDate)
                    </th>*@
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HospitalizationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Cpf)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.TypePacient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sex)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PacientStatus.Description)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Rg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RgOrgan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RgIssueDate)
                        </td>*@
                        <td>
                            <a title="Edit Pacient" asp-controller="Pacient" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-square-o fa-2x"></span> </a>
                            <a title="Details Pacient"  asp-controller="Pacient" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search fa-2x"></span> </a>
                            <a title="Delete Pacient" asp-controller="Pacient" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash fa-2x"></span> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

