@using Dextermd.ITDeveloper.Domain.Enums
@model Dextermd.ITDeveloper.Domain.Models.Pacient

@{
    ViewData["Title"] = "Add Pacient";
}

<div class="row">
    <div class="panel panel-heading">
        <h3>Add Pacient</h3>
    </div>

    <div class="panel panel-body">
        <div class="col-md-4">
            <form asp-controller="Pacient" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <partial name="_edit_create" />

                <div class="form-group">
                    <input type="submit" value="Add Pacient" class="btn btn-success" />
                    <a asp-controller="Pacient" asp-action="Index" class="btn btn-info">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
